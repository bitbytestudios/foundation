## build/msvc                                                                 ##
##  Handles 'inconsistencies' when dealing with `cl.exe`.                     ##
################################################################################

_ = ARGV.map { |argument|
  # Wrap paths in case there are spaces in them.
  if argument[0] != '-'
    "\"#{argument}\""
  elsif argument[0..1] == '-I'
    "-I\"#{argument[2..-1]}\""
  elsif argument[0..2] == '-Fo'
    "-Fo\"#{argument[3..-1]}\""
  elsif argument[0..2] == '-Fd'
    "-Fd\"#{argument[3..-1]}\""
  # Otherwise just pass them off.
  else
    argument
  end
}.unshift("cl.exe").join(' ')

begin
  COMMAND = { :output => `#{_}`, :successful => $?.success? }
rescue => e
  puts "> #{e.to_s}"
  puts "Is `cl.exe` in PATH?"
  exit false
end

print COMMAND[:output]

if not COMMAND[:successful]
  obj = ARGV.select { |argument|
    (argument[0..2] == '-Fo')
  }[0][3..-1]

  # Object files should be deleted on failure, but you never know...
  begin
    File.delete(obj)
  rescue
  end

  pdb = ARGV.select { |argument|
    (argument[0..2] == '-Fd')
  }[0][3..-1]

  begin
    File.delete(pdb)
  rescue
  end
end

exit COMMAND[:successful]
